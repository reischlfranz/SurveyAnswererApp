<?xml version="1.0"
      encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             xmlns:style="clr-namespace:SurveyAnswererApp.Views.Style;assembly=SurveyAnswererApp"
             mc:Ignorable="d"
             x:Class="SurveyAnswererApp.Views.AnswerYesNoView">
  <ContentView.Resources>
        <style:TextStyleResource />
  </ContentView.Resources>
  <ContentView.Content>
    <StackLayout Orientation="Vertical"
                 HorizontalOptions="CenterAndExpand">
      <Label Text="{Binding Answer.AnswerText}"
             HorizontalOptions="Center"
             />
      <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
        
        <input:RadioButtonGroupView
          SelectedIndex="{Binding YesNoAnswerSelection}"
          Orientation="Horizontal">
          <input:RadioButton Text="Yes" 
                             Style="{StaticResource YesAnswerRadioButton}" />
          <input:RadioButton Text="No"
                             Style="{StaticResource NoAnswerRadioButton}" />
        </input:RadioButtonGroupView>
      </StackLayout>
    </StackLayout>
  </ContentView.Content>
</ContentView>
